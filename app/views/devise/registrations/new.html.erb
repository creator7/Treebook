<div class="row">
  <div class="col-xs-7 col-md-4", style="margin-bottom: 40px">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "well", :style => 'width: 370px'}) do |f| %>
        <%= devise_error_messages! %>

        <fieldset>

          <legend>Sign up</legend>
          <div class="field">
            <%= f.input :first_name, :input_html => {:style => 'width: 300px'} %><br />
          </div>
          <div class="field">
            <%= f.input :last_name, :input_html => {:style => 'width: 300px'}%><br />
          </div>
          <div class="field">
            <%= f.input :profile_name, :input_html => {:style => 'width: 300px'} %><br />
          </div>
          <div class="field">
            <%= f.input :email, :input_html => {:style => 'width: 330px'} %><br />
          </div>

          <div class="field">
            <%= f.input :password, autocomplete: "off", :input_html => {:style => 'width: auto'},hint: "(atleast 8 characters)" %>
          </div>

          <div class="field">
            <%= f.input :password_confirmation, autocomplete: "off", :input_html => {:style => 'width: auto'} %>
          </div>

          <div class="form-actions">
            <%= f.button :submit ,"Sign up" %>
          </div>
        </fieldset>
    <% end %>

  </div>
  <div class="col-xs-6 col-md-8">
    <h1>Sign up now to join us :)</h1></br>
    <h5>Already have an account?</h5>
    <%= link_to "Log in", new_user_session_path, class: "btn btn-primary" %>
    <div style="margin-top: 10px">
      <%= link_to "Forgot your password?", new_user_password_path %>
    </div>
  </div>
</div>