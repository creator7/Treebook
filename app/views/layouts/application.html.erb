<!DOCTYPE html>
<html>
<head>
  <title>Yoo Molvi</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "#{image_tag("background2.png", width: '140', height: '36', alt: 'Yoo Molvi', class: "logo")}".html_safe, feed_path , class: "navbar-brand hvr-wobble-vertical"%>
      <% if user_signed_in? %>
        <ul class="nav navbar-nav pull-left">
            <li><%= link_to "News Feed", feed_path %></li>
        </ul>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.full_name %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to '  Profile', profile_path(current_user.profile_name), class: 'glyphicon glyphicon-user' %></li>
                <li><%= link_to "  Settings", edit_user_registration_path , class: 'glyphicon glyphicon-wrench'%></li>
                <li class="divider"></li>
                <li><%= link_to "  Logout", logout_path, class: 'glyphicon glyphicon-log-out' %></li>
              </ul>
            </li>
        <% else %>
            <li> <%= link_to "Register", registration_path %> </li>
            <li> <%= link_to "Login", login_path %> </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<div class="container">
  <% if flash[:notice] %>
      <div class="alert alert-success">
        <button class="close" data-dismiss="alert">*</button>
        <%= flash[:notice] %>
      </div>
  <% end %>
  <% if flash[:alert] %>
      <div class="alert alert-danger">
        <button class="close" data-dismiss="alert">*</button>
        <%= flash[:alert] %>
      </div>
  <% end %>
  <%= yield %>
  <%= render 'layouts/footer' %>
</div>
</body>
</html>
